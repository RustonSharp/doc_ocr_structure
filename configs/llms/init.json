{
    "llm_services": {
      "current": "google",
      
      "services": {
        "ollama": {
          "provider": "ollama",
          "base_url": "http://localhost:11434/v1",
          "model": "qwen3:0.6b",
          "temperature": 0.1,
          "max_tokens": 2000,
          "timeout": 60,
          "description": "Ollama本地服务 - 默认模型 qwen3:0.6b（轻量中文增强）"
        },
        
        "openai": {
          "provider": "openai",
          "model": "gpt-4o-mini",
          "temperature": 0.1,
          "max_tokens": 2000,
          "timeout": 30,
          "description": "OpenAI官方API - 需要设置环境变量 OPENAI_API_KEY"
        },

        "google": {
          "provider": "google",
          "model": "gemini-2.5-flash",
          "temperature": 0.1,
          "max_tokens": 4000,
          "timeout": 30,
          "description": "Google Gemini 官方API（Quickstart示例） - 需要设置环境变量 GEMINI_API_KEY"
        },

        "mock": {
          "provider": "mock",
          "description": "测试模式 - 无需配置"
        }
      }
    }
  }
  